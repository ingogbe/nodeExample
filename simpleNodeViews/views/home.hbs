<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<div class="page-header">
			<h1>
				Tarefas <a class="btn btn-primary pull-right" href="#">Adicionar tarefa</span></a>
			</h1>
		</div><!-- /.page-header -->

		<table class="table table-hover">
			<thead>
				<th width="25px"><strong>#</strong></th>
				<th width="55%"><strong>Titulo</strong></th>
				<th colspan="2"><strong>Status:</strong></th>
			</thead>
			<tbody>
				{{#each tasks}}
					<tr>
						<td><span>{{_id}}</span></td>
						<td><span>{{title}}</span></td>
					{{#if status}}
						<td>Concluído</td>
					{{else}}
						<td>Não concluído</td>
					{{/if}}
						<td width="100px">
							<a class="btn btn-info" href="#"><span class="fa fa-pencil"></span></a>
							<a class="btn btn-danger" href="#"><span class="fa fa-trash"></span></a>
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</div><!-- /.col-sm-4 -->
</div><!-- /.container -->